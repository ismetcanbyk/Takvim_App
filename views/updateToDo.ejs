<%- include('partials/_header') %>

    <%- include('partials/_navigation') %>
        </head>

        <body ">
            <% let today=new Date();%>
            <div class="bootstrap-iso mt-5">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-6 m-5 col-sm-6 col-xs-6">

                            <!-- Form code begins -->
                            <form class="container" method="POST" action="/toDo/update/<%= toDo._id %>">
                                <div class="form-group">
                                    <label for="exampleFormControlSelect1">Olayın Tipi</label>
                                    <select class="form-control" name="title" placeholder="Title" required id="exampleFormControlSelect1">
                                      <option>Toplantı</option>
                                      <option>Dersler</option>
                                      <option>İşler</option>
                                      <option>Aile</option>
                                   
                                    </select>
                                  </div>
                                <div class="form-group">
                                    <label for="exampleFormControlTextarea1">Açıklama</label>
                                    <textarea class="form-control" placeholder="Description" name="description"
                                        rows="3"><%= toDo.description %></textarea>
                                </div>

                                <div class="form-group"> <!-- Date input -->
                                    <label class="control-label" for="date">Başlangıç Zamanı</label>
                                    <input class="form-control"  min="<%=today.toISOString().slice(0, 16)%>"  type="datetime-local" id="date" name="theTime">
                                </div>
                                <div class="form-group"> <!-- Date input -->
                                    <label class="control-label" for="date">Bitiş Zamanı</label>
                                    <input class="form-control" min="<%=today.toISOString().slice(0, 16)%>" type="datetime-local" id="finishTime" name="finishTime">
                                </div>
                                <div class="form-group"> <!-- Submit button -->
                                    <button class="btn btn-dark " name="submit" type="submit">Update</button>
                                </div>
                            </form>
                            <!-- Form code ends -->

                        </div>
                    </div>
                </div>
            </div>
        </body>

        </html>